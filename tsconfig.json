{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"importHelpers": true,
		"lib": [ "esnext", "dom" ],
		"moduleResolution": "node",
		"module": "esnext",
		"rootDir": "src",
		"outDir": "dist",
		"sourceMap": true,
		"target": "es2015",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true
	},
	"include": [
		"src/**/*.ts"
	]
}
